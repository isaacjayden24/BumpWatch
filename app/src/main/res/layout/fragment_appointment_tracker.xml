<!-- appointments_layout.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
android:padding="16dp"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Dashboard.AppointmentTrackerFragment"
    >

<!-- Title -->
<TextView
    android:id="@+id/appointmentSchedulerTitleTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Appointment Scheduler"
    android:textSize="24sp"
    android:textStyle="bold"
    android:layout_marginBottom="16dp"/>

<!-- Appointment Date -->
<TextView
    android:id="@+id/appointmentDateTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Select Date"
    android:textSize="18sp"
    android:layout_marginBottom="8dp"/>

<DatePicker
    android:id="@+id/appointmentDatePicker"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:calendarViewShown="false"/>

<!-- Appointment Time -->
<TextView
    android:id="@+id/appointmentTimeTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Select Time"
    android:textSize="18sp"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="8dp"/>

<TimePicker
    android:id="@+id/appointmentTimePicker"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>

<!-- Doctor's Name -->
<EditText
    android:id="@+id/doctorNameEditText"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Doctor's Name"
    android:inputType="text"/>

<!-- Save Button -->
<Button
    android:id="@+id/saveAppointmentButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Save"
    android:layout_gravity="end"
    android:layout_marginTop="16dp"/>

</LinearLayout>