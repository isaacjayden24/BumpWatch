<?xml version="1.0" encoding="utf-8"?>
<!-- fragment_symptom_tracker.xml -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".Dashboard.SymptomsFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Symptom Name -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Symptom Name"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/edit_symptom_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter symptom name"
                android:inputType="text"/>

            <!-- Symptom Description -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Symptom Description"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/edit_symptom_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter symptom description"
                android:inputType="textMultiLine"/>

            <!-- Save Button -->
            <Button
                android:id="@+id/btn_save_symptom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save Symptom"/>

            <!-- Display Symptom -->
            <TextView
                android:id="@+id/text_display_symptom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Saved Symptoms"
                android:textSize="18sp"/>

        </LinearLayout>
    </ScrollView>
