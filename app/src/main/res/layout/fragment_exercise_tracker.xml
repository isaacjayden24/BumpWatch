<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="16dp"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".Nutrition.ExerciseTrackerFragment">

        <!-- Date Picker -->
        <TextView
            android:id="@+id/text_select_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Date:"
            android:textSize="18sp"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="32dp"/>

        <DatePicker
            android:id="@+id/date_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_select_date"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="32dp"/>

        <!-- Exercise Input -->
        <TextView
            android:id="@+id/text_enter_exercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Exercise:"
            android:textSize="18sp"
            android:layout_below="@id/date_picker"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="32dp"/>

        <EditText
            android:id="@+id/edit_exercise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_enter_exercise"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="32dp"
            android:hint="e.g., Running, Yoga, etc."
            android:inputType="text"/>

        <!-- Save Exercise Button -->
        <Button
            android:id="@+id/btn_save_exercise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Exercise"
            android:layout_below="@id/edit_exercise"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="32dp"
            android:backgroundTint="@color/navy"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>

        <!-- Display Exercise -->
        <TextView
            android:id="@+id/text_display_exercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:layout_below="@id/btn_save_exercise"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="32dp"/>

    </RelativeLayout>
</ScrollView>