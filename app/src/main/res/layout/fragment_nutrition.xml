<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:padding="16dp"
tools:context=".Model.NutritionFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nutrition and Fitness"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="30sp"/>



    <LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:layout_marginBottom="30dp"
android:padding="19dp">


<androidx.cardview.widget.CardView
    android:id="@+id/pregnancy_week"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:layout_marginEnd="8dp"
    android:elevation="4dp"
    android:padding="16dp">

    <TextView
        android:id="@+id/pregnancy_weektext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Workout Tutorials"
        android:textSize="18sp" />
</androidx.cardview.widget.CardView>


<androidx.cardview.widget.CardView
    android:id="@+id/meal_cardview"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:layout_marginStart="8dp"
    android:elevation="4dp"
    android:padding="16dp">

    <TextView
        android:id="@+id/meal_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Meal planner"
        android:textSize="18sp" />
</androidx.cardview.widget.CardView>

</LinearLayout>

    <!-- Second row -->
<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:layout_marginBottom="30dp"
android:padding="19dp">


<androidx.cardview.widget.CardView
    android:id="@+id/exercise_cardview"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:layout_marginRight="8dp"
    android:elevation="4dp"
    android:padding="16dp">

    <TextView
        android:id="@+id/exercise_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Exercise Tracker"
        android:textSize="18sp" />
</androidx.cardview.widget.CardView>


<androidx.cardview.widget.CardView
    android:id="@+id/community_card"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:layout_marginLeft="8dp"
    android:elevation="4dp"
    android:padding="16dp">

    <TextView
        android:id="@+id/community_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Community forum"
        android:textSize="18sp" />
</androidx.cardview.widget.CardView>

</LinearLayout>
</LinearLayout>